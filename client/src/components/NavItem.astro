---
interface Props {
  href: string;
  label: string;
  class?: string;
  modalType?: string;
}

const { href, label, class: className, modalType } = Astro.props;
---

<li class="nav-item">
  <a
    href={href}
    class={`nav-item--link ${className ?? ""}`}
    data-modal-trigger={modalType}
    aria-role={modalType ? "button" : undefined}
  >
    {label}
  </a>
</li>
