---
import NavItem from "./NavItem.astro";
import { mainNavItems, footerNavItems } from "@data/navigation.js";

interface Props {
  type: "main" | "footer";
  class?: string;
  menuClass?: string;
  itemClass?: string;
  mainNavItems?: Array<{
    href: string;
    label: string;
    modalType?: string;
  }>;
  footerNavItems?: Array<{
    href: string;
    label: string;
    modalType?: string;
  }>;
}

const {
  type,
  class: className = "",
  menuClass = "",
  itemClass = "",
} = Astro.props;
const items = type === "main" ? mainNavItems : footerNavItems;
---

<nav class={className}>
  <ul class={`menu ${menuClass ?? ""}`}>
    {
      items.map((item) => (
        <NavItem
          href={item.href}
          label={item.label}
          class={`${itemClass ?? ""} ${item.modalType ? "open-modal" : ""}`}
          modalType={item.modalType}
        />
      ))
    }
  </ul>
</nav>
