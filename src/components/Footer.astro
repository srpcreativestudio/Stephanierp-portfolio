---
// components
import Icon from "./Icon.astro";
import Navigation from "./Navigation.astro";
---

<footer class="relative">
  <div
    class="to-top absolute -top-16 right-4 hover:-translate-y-2 transition-transform duration-300 ease-in-out"
  >
    <a href="#home"><Icon name="chevronUp" class="up-arrow" /></a>
  </div>
  <div class="footer__content bg-black text-white p-10 text-center">
    <Navigation
      class="footer__nav"
      menuClass="gap-4 flex flex-col justify-center lg:flex-row"
    />
    <div class="footer__content--copyright mt-4">
      Copyright | Designed and Coded by Stephanie R Patton
    </div>
  </div>
</footer>
